{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api/index.py"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "LOG_LEVEL": "INFO",
    "MINIO_BUCKET_IMAGES": "vehicle-images",
    "ALLOWED_ORIGINS": "https://car-auction-analyzer-isaac.netlify.app"
  },
  "functions": {
    "backend/api/index.py": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
